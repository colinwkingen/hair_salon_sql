<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1>Welcome to Astro Salon</h1>
      <h3>Salon management software that's out of this world.</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <h3>Current Available Stylists</h3>
      <ul>
      <% @all_stylists.each() do |stylist| %>
        <li><%= stylist.name %>
          <form action="remove_stylist" method="post">
            <div class="form-group">
              <input name="_method" type="hidden" value="delete">
              <input type="hidden" name="chosen_stylist" value="<%= stylist.id %>">
            </div>
            <button class="move_right" type="submit">Send Home</button>
          </form>
        </li>
        <form action="one_stylist" method="post">
          <div class="form-group">
            <input type="hidden" name="these_clients" value="<%= stylist.id %>">
          </div>
          <button class="move_right" type="submit">View Clients</button>
        </form>
      <% end %>
      <form action="add_stylist" method="post">
        <div class="form-group">
          <label for="new_stylist">Add a Stylist that is working today.</label>
          <input type="text" name="new_stylist" value="">
        </div>
        <button class="move_right" type="submit">Add</button>
      </form>
      </ul>
    </div>
    <div class="col-lg-6">
      <h3>Current clients our stylist are serving today.</h3>
      <% @all_clients.each() do |client| %>
        <li><%= client.name %> </li>
      <% end %>
    </div>
  </div>
</div>
