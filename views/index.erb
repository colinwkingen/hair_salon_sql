<div class="container">
  <div class="row">
    <div class="col-lg-12 page-header">
      <h1>Welcome to Astro Salon</h1>
      <h3>Salon management software that's out of this world.</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <h3>Current Available Stylists</h3>
      <ul>
      <% @all_stylists.each() do |stylist| %>
        <li class="well stylist-listing"><h2><%= stylist.name %></h2>
          <form action="stylists/:id" method="post">
            <div class="form-group">
              <input name="_method" type="hidden" value="delete">
              <input type="hidden" name="chosen_stylist" value="<%= stylist.id %>">
            </div>
            <button class="btn pull-right" type="submit">Send Home</button>
          </form>
          <form action="stylists/:id" method="get">
            <div class="form-group">
              <input type="hidden" name="these_clients" value="<%= stylist.id %>">
            </div>
            <button class="btn pull-right" type="submit">View Clients</button>
          </form>
        </li>
      <% end %>
      <form action="/stylists" method="post">
        <div class="form-group add-stylist well">
          <label for="new_stylist">Add a Stylist that is working today.</label>
          <button class="pull-right btn" type="submit">Add</button>
          <input type="text" name="new_stylist" value="">
        </div>
      </form>
      </ul>
    </div>
    <div class="col-lg-6">
      <h3>Current clients our stylist are serving today.</h3>
      <% @all_clients.each() do |client| %>
        <li class="well"><h3><%= client.name %></h3></li>
      <% end %>
    </div>
  </div>
</div>
